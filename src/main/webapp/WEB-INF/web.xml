<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	<display-name>openliberty</display-name>

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>

    <filter>
        <filter-name>StickyRouting</filter-name>
        <filter-class>io.openliberty.website.StickyRouting</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StickyRouting</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>TLSFilter</filter-name>
        <filter-class>io.openliberty.website.TLSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TLSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Set the secure flag and http-only for the session cookie -->
    <session-config>
        <cookie-config>
        <secure>true</secure>
        <http-only>true</http-only>
        </cookie-config>
    </session-config>
</web-app>
